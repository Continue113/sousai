<?xml version="1.0" encoding="UTF-8"?>
<!-- 指定Struts2配置文件的DTD信息 -->
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.1.7//EN"
	"http://struts.apache.org/dtds/struts-2.1.7.dtd">
<!-- Struts2配置文件的根元素 -->
<struts>
	<constant name="struts.custom.i18n.resources" value="resource"/>
	<constant name="struts.devMode" value="true"/>
	<package name="default" extends="struts-default">
	
		<!-- 定义全局Result映射 -->
		<global-results>
			<!-- 定义login逻辑视图对应的视图资源 -->
			<result name="login">login.jsp</result>
		</global-results>
	
		<!-- ============================下面是员工角色的Action======================== -->
		<!-- 定义处理登录系统的Action -->
		<action name="processLogin"
			class="org.sousai.action.LoginAction">
			<result name="user">index.jsp</result>
			<result name="error">login.jsp</result>
			<result name="input">login.jsp</result>
		</action>

		<!-- 定义处理注册的Action -->
		<action name="processReg"
			class="org.sousai.action.RegAction">
			<result name="success">index.jsp</result>
			<result name="error">error.jsp</result>
		</action>
		
		<!-- 定义发布比赛的Action -->
		<action name="relMatch"
			class="org.sousai.action.RelMatchAction">
			<result name="success">userCenter-releaseMatch.jsp</result>
			<result name="fail">error.jsp</result>
		</action>

		<!-- 定义检查用户名的Action -->
		<action name="validName"
			class="org.sousai.action.ValidNameAction">
		</action>
		
		<!-- 定义选择地区的Action -->
		<action name="selRegion"
			class="org.sousai.action.SelRegionAction">
		</action>
		
		<!-- 定义注销的Action -->
		<action name="processLogout"
			class="org.sousai.action.LogoutAction">
			<result>index.jsp</result>
		</action>
		
		<!-- 更新用户信息的Action -->
		<action name="updateUserInfo"
			class="org.sousai.action.UpdateUserAction">
		</action>
		
		<!-- 上传用户头像的Action -->
		<action name="uploadUserPic"
			class="org.sousai.action.UploadUserPicAction">
		</action>
		
		<!-- 同时上传多张场地图片的action -->
		<action name="uploadCourtPic"
			class="org.sousai.action.UploadCourtPicAction">
			<result>main.jsp</result> 
		</action>
		
		<!-- 发布场地的action -->
		<action name="relCourt"
			class="org.sousai.action.RelCourtAction">
			<result>main.jsp</result>
		</action>
		
		<!-- 获取所有比赛大类的action -->
		<action name="showMC"
			class="org.sousai.action.ShowMatchClassAction">
		</action>
		
		<!-- 获取比赛大类下的比赛小类的action -->
		<action name="showMT"
			class="org.sousai.action.ShowMatchTypesAction">
		</action>
		
		<!-- 获取对应比赛类型的场地类型的action -->
		<action name="showCT"
			class="org.sousai.action.ShowCourtTypesAction">
		</action>
		
		<!-- 发布评论的action -->
		<action name="relMsg"
			class="org.sousai.action.RelMessageAction">
		</action>
		
		<!-- 获取指定场地所有评论的action -->
		<action name="showMsgs"
			class="org.sousai.action.ShowMessagesAction">
		</action>
		
		<!-- 在发布比赛页面获取场地的action -->
		<action name="getCourtM"
			class="org.sousai.action.GetCourtInMatchRelingAction">
		</action>

		<!-- 筛选比赛的action -->
		<action name="scrMatch"
			class="org.sousai.action.ScreenMatchAction">
		</action>
		
		<!-- 通过场地id获取场地详细信息的action -->
		<action name="getCourtD"
			class="org.sousai.action.GetCourtDetailAction">
		</action>
	</package>
	
	
<!--	<package name="ajax" extends="json-default">
		<action name="uploadPic"
			class="org.sousai.action.UploadPicAction">
			<result type="json"></result>
		</action>
	</package> -->
	
</struts>